#:import TabbedPanelItem libs.components.tabbed_panel_item
#:import MyChip libs.components.my_chip
#:import MyCheckbox	libs.components.my_checkbox

 # Defining dropdown Menu
<RightContentCls>
    disabled: True
    adaptive_size: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        user_font_size: "16sp"
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        font_style: "Caption"
        adaptive_size: True
        pos_hint: {"center_y": .5}

<Item>
    IconLeftWidget:
        icon: root.left_icon

    RightContentCls:
        id: container
        icon: root.right_icon
        text: root.right_text

# Start creating UI
<FirstLeftScreen@TabbedPanelItem>:
    id: filters_tab
    text: 'Filters'

    MDBoxLayout:
        orientation: 'vertical'
        padding: '42dp'
        spacing: '30dp'
        md_bg_color: (199/255, 177/255, 152/255, 1)

        MDBoxLayout:
            id: hardiness_zones_container
            orientation: 'vertical'
            spacing: '20dp'
            Button:
                id: submit_filters
                text: 'Submit Filters'
                on_release: app.root.ids.main_display.ids.db_screen.refresh(filters=app.all_filters)
            Label:
                text: 'Hardiness Zone'
                font_size: '28dp'
            MDBoxLayout:
                MDSlider:
                    id: hardiness_zone_slider
                    min: 2
                    max: 13
                    step: 1
                    hint: False
					on_value:app.process_slider('hardiness_zone', *args)
                Label:
                    size_hint: (.2, 1)
                    text: str(hardiness_zone_slider.value)
                    font_size: '24dp'

        MDBoxLayout:
            id: growth_rate_box
            orientation: 'vertical'
            Label:
                text: 'Growth Rate'
                font_size: '28dp'

            MDGridLayout:
                id: growth_rate_checks
				rows: 1
                padding: '5dp'
                spacing: '5dp'
				Label:
					text: 'Slow'
                MyCheckbox:
                    id: slow
					on_active: app.process_checkbox(self,self.state,'slow', 'growth_rate')
				Label:
					text: 'Medium'
                MyCheckbox:
                    id: medium
					on_active:app.process_checkbox(self,self.state,'medium', 'growth_rate')
				Label:
					text: 'Fast'
                MyCheckbox:
                    id: fast
					on_active:app.process_checkbox(self,self.state,'fast', 'growth_rate')

        MDBoxLayout:
            id: form_box
            orientation: 'vertical'
            Label:
                text: 'Plant Form'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				rows: 2
                padding: '10dp'
                spacing: '5dp'
				Label:
					text: 'Herb'
                MyCheckbox:
                    id: herb
					on_active: app.process_checkbox(self,self.state,'herb', 'form')
				Label:
					text: 'Shrub'
                MyCheckbox:
                    id: shrub
					on_active:app.process_checkbox(self,self.state,'shrub', 'form')
				Label:
					text: 'Tree'
                MyCheckbox:
                    id: tree
					on_active:app.process_checkbox(self,self.state,'tree', 'form')
				Label:
					text: 'Bamboo'
                MyCheckbox:
                    id: bamboo
					on_active:app.process_checkbox(self,self.state,'bamboo', 'form')


        MDBoxLayout:
            id: pollinator_box
            orientation: 'vertical'
            Label:
                text: 'Pollinators'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				rows: 3
				Label:
					text: 'Bees'
                MyCheckbox:
                    id: bees
					on_active: app.process_checkbox(self,self.state,'bees', 'pollinators')
				Label:
					text: 'Flies'
                MyCheckbox:
                    id: flies
					on_active:app.process_checkbox(self,self.state,'flies', 'pollinators')
				Label:
					text: 'Other Insects'
                MyCheckbox:
                    id: insects
					on_active:app.process_checkbox(self,self.state,'insects', 'pollinators')
				Label:
					text: 'Lepidoptera'
                MyCheckbox:
                    id: lepidoptera
					on_active:app.process_checkbox(self,self.state,'lepidoptera', 'pollinators')
				Label:
					text: 'Wind'
                MyCheckbox:
                    id: wind
					on_active:app.process_checkbox(self,self.state,'wind', 'pollinators')
				Label:
					text: 'Beetles'
                MyCheckbox:
                    id: beetles
					on_active:app.process_checkbox(self,self.state,'beetles', 'pollinators')


        MDBoxLayout:
            Label:
                text: 'Flower Month: '
                font_size: '24sp'
            MyDropDownItem:
                id: flower_month_dropitem
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Any'
                font_size: '20dp'
                on_release: app.menu.open()
            Label:
                text: 'Nectary Value: '
                font_size: '24sp'
            MyDropDownItem:
                id: flower_month_dropitem
                background_color: 'white'
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Any'
                font_size: '20dp'
                on_release: app.menu.open()
