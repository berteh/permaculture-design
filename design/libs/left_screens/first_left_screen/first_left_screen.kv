#:import TabbedPanelItem libs.components.tabbed_panel_item
#:import MyChip libs.components.my_chip
#:import MyCheckbox	libs.components.my_checkbox

<FirstLeftScreen@TabbedPanelItem>:
    id: filters_tab
    text: 'Filters'

    MDBoxLayout:
        orientation: 'vertical'
        padding: '42dp'
        spacing: '30dp'
        md_bg_color: (199/255, 177/255, 152/255, 1)

        MDBoxLayout:
            id: hardiness_zones_container
            orientation: 'vertical'
            spacing: '20dp'
            Label:
                text: 'Hardiness Zone'
                font_size: '28dp'

            MDBoxLayout:
                MDSlider:
                    id: hardiness_zone_slider
                    min: 2
                    max: 13
                    step: 1
                    hint: False
                Label:
                    size_hint: (.2, 1)
                    text: str(hardiness_zone_slider.value)
                    font_size: '24dp'

        MDBoxLayout:
            id: form_box
            orientation: 'vertical'
            Label:
                text: 'Plant Form'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				cols: 2
                padding: '10dp'
                spacing: '5dp'
				Label:
					text: 'Herb'
                MyCheckbox:
                    id: herb
					on_active: app.process_checkbox(self,self.state,'herb', 'form')
				Label:
					text: 'Shrub'
                MyCheckbox:
                    id: shrub
					on_active:app.process_checkbox(self,self.state,'shrub', 'form')
				Label:
					text: 'Tree'
                MyCheckbox:
                    id: tree
					on_active:app.process_checkbox(self,self.state,'tree', 'form')
				Label:
					text: 'Bamboo'
                MyCheckbox:
                    id: bamboo
					on_active:app.process_checkbox(self,self.state,'bamboo', 'form')


        MDBoxLayout:
            id: pollinator_box
            orientation: 'vertical'
            Label:
                text: 'Pollinators'
                font_size: '28dp'

            MDGridLayout:
                id: form_checks
				cols: 2
                padding: '10dp'
                spacing: '5dp'
				Label:
					text: 'Bees'
                MyCheckbox:
                    id: bees
					on_active: app.process_checkbox(self,self.state,'bees', 'pollinators')
				Label:
					text: 'Flies'
                MyCheckbox:
                    id: flies
					on_active:app.process_checkbox(self,self.state,'flies', 'pollinators')
				Label:
					text: 'Other Insects'
                MyCheckbox:
                    id: insects
					on_active:app.process_checkbox(self,self.state,'insects', 'pollinators')
				Label:
					text: 'Lepidoptera'
                MyCheckbox:
                    id: lepidoptera
					on_active:app.process_checkbox(self,self.state,'lepidoptera', 'pollinators')
				Label:
					text: 'Wind'
                MyCheckbox:
                    id: wind
					on_active:app.process_checkbox(self,self.state,'wind', 'pollinators')
				Label:
					text: 'Bats'
                MyCheckbox:
                    id: bats
					on_active:app.process_checkbox(self,self.state,'bats', 'pollinators')


        MDBoxLayout:
            Label:
                text: 'Flower Month: '
                font_size: '24sp'
            MDDropDownItem:
                id: flower_month_dropitem
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Any'
                font_size: '20dp'
                # on_release: something()
            Label:
                text: 'Nectary Value: '
                font_size: '24sp'
            MDDropDownItem:
                id: flower_month_dropitem
                background_color: 'white'
                size_hint: None, None
                pos_hint: {'center_x': .5, 'center_y': .5}
                text: 'Any'
                font_size: '20dp'
                # on_release: something()
