#:kivy 2.1.0

<DraggableImage>:
	drag_rectangle: (self.x, self.y + self.width/2, self.width, self.width) # because circle should be equal
    drag_timeout: 1000
    drag_distance: 0

<MasterLayout>:
	orientation: 'horizontal'
	BoxLayout:
		size_hint: (0.1, 1)
		orientation: 'vertical'
		IconButton:
			source: 'images/tree1.png'
			on_press: map.add_tree(size=(self.size), pos=(self.pos[0]-self.width, self.pos[1]))
		Label:
			text: 'Label 1'
		Label:
			text: 'Label 2'
	MyStencilView:
		id: map
		size_hint: (0.85, 1)
		BackgroundImage:
			id: background
			source: 'images/largefield1.png'
			size_hint: (1,1)
